# Supabase Configuration
# Get these values from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Example:
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database URLs
# Overseas (Supabase)
DATABASE_URL=your_supabase_database_url

# China (Tencent CloudBase) - Supabase compatible
CLOUDBASE_DATABASE_URL=your_cloudbase_database_url
CLOUDBASE_SUPABASE_URL=your_cloudbase_supabase_url
CLOUDBASE_SUPABASE_ANON_KEY=your_cloudbase_supabase_anon_key

# Supabase Auth Configuration
# Google OAuth (for overseas users)
SUPABASE_GOOGLE_CLIENT_ID=your_google_client_id
SUPABASE_GOOGLE_CLIENT_SECRET=your_google_client_secret

# WeChat OAuth Configuration (Optional)
# Get these from WeChat Open Platform
NEXT_PUBLIC_WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret 

# Site URL for OAuth redirects
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Tencent Cloud Domain for China users (used in middleware for geo-routing)
TENCENT_CLOUD_DOMAIN=cn.mornhub.help

# ============================================
# Payment Configuration
# ============================================

# Stripe Payment (International)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal Payment (International)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # sandbox or live

# Alipay Payment (China)
# Get these from Alipay Open Platform: https://open.alipay.com/
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_PRIVATE_KEY=your_alipay_private_key  # RSA2 Private Key
ALIPAY_PUBLIC_KEY=your_alipay_public_key    # Alipay Public Key

# Payment Success/Cancel URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000 